{% extends "layout.twig" %}
{% block content %}
    <nav>
        <h1>Add apartment</h1>
        <a href="/">Home</a>
        <br>
        <a href="/apartments">Back</a>
        <br><br>
    </nav>
    <form method="post" action="/apartments">
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="name" required>
        <br><br>
        <label for="Address">Address:</label>
        <input type="text" id="Address" name="address" required>
        <br><br>
        <label for="description">Description:</label>
        <textarea id="description" name="description" rows="3" cols="20" required></textarea>
        <br><br>
        <label for="availableFrom">Available From</label>
        <input type="date" id="availableFrom" name="availableFrom" required>
        <br><br>
        <label for="availableTill">Available Till</label>
        <input type="date" id="availableTill" name="availableTill" required>
        <br><br>
        <input type="submit" value="Add new apartment">
    </form>
    <br><br>
{% endblock %}