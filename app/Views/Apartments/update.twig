{% extends "layout.twig" %}
{% block content %}
    <nav>
        <h1>Update Apartment</h1>
        <a href="/">Home</a>
        <br>
        <a href="/apartments/{{ apartment.id }}">Back</a>
        <br><br>
    </nav>
    <form method="post" action="/apartments/{{ apartment.id }}">
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="name" value="{{ apartment.name }}" required>
        <br><br>
        <label for="Address">Address:</label>
        <input type="text" id="Address" name="address" value="{{ apartment.address }}" required>
        <br><br>
        <label for="description">Description:</label>
        <textarea id="description" name="description" rows="3" cols="20" required>{{ apartment.description }}</textarea>
        <br><br>
        <label for="availableFrom">Available From</label>
        <input type="date" id="availableFrom" name="availableFrom" required value="{{ apartment.availableFrom }}">
        <br><br>
        <label for="availableTill">Available Till</label>
        <input type="date" id="availableTill" name="availableTill" value="{{ apartment.availableTill }}" required>
        <br><br>
        <input type="submit" value="Edit Apartment">
    </form>
    <br><br>
{% endblock %}
