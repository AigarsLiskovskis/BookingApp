{% extends "layout.twig" %}
{% block content %}
    <nav>
        <h1>Apartments</h1>
        <a href="/">Back</a> |
        {% if authorized %}
            <a href="/apartments/create">Add Apartment</a>
        {% else %}
            <a href="/users/signUp">SIGN UP</a> |
            <a href="/users">LOGIN</a>
        {% endif %}
        <br><br>
    </nav>
    <ul id="navigation">
        {% for apartment in apartments %}
            <li>
                <a href="/apartments/{{ apartment.id }}">
                    {{ apartment.name }}
                    <br>
                    {{ apartment.address }}
                    <br>
                    {{ apartment.description }}
                    <br>
                    {{ apartment.availableFrom }}
                    <br>
                    {{ apartment.availableTill }}
                </a>
                <br><br>
            </li>
        {% endfor %}
    </ul>
    <br><br>
{% endblock %}