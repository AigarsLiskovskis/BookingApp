{% extends "layout.twig" %}
{% block content %}
    <div class="container">
        {% for apartment in apartments %}
            <a href="/apartments/{{ apartment.id }}">
                <div class="col-sm-4" style="color: whitesmoke">
                    <div class="panel panel-success" style="background: #404040 ">
                        <div class="panel-heading" style="background: darkgreen; color: lawngreen">{{ apartment.name }}</div>
                        <div class="panel-body">
                            <div>Address: {{ apartment.address }}</div>
                            <div>Available from: {{ apartment.availableFrom }}</div>
                            <div>Available till: {{ apartment.availableTill }}</div>
                        </div>
{#                        <div class="panel-footer" style="background: #333333"></div>#}
                    </div>
                </div>
            </a>
        {% endfor %}
    </div><br>
{% endblock %}
